<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlWardrobe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.WardrobeFragment">


    <Button
        android:id="@+id/btnPants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="258dp"
        android:layout_marginTop="341dp"
        android:layout_marginBottom="5dp"
        android:text="Upload Pants" />

    <Button
        android:id="@+id/btnShirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="4dp"
        android:text="Upload Shirt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShirts"
        android:layout_width="match_parent"
        android:layout_height="280dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPant"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_below="@+id/rvShirts"
        android:layout_marginTop="-1dp" />

</RelativeLayout>