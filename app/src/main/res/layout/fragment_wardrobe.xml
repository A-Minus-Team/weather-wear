<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlWardrobe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#130b20"
    tools:context=".fragments.WardrobeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShirts"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPant"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/rvShirts"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnPants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f72177"
        android:text="Upload Pants"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnShirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#f72177"
        android:text="Upload Shirt"
        android:textColor="#FFFFFF" />


</RelativeLayout>