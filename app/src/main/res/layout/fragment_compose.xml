<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShirtFragment">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="173dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="18dp"
        android:text="Add Clothing" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="265dp"
        android:text="Submit"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="255dp"
        android:layout_height="244dp"
        android:layout_below="@+id/btnCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="77dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSubmit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="260dp"
        android:layout_marginTop="-49dp"
        android:layout_marginEnd="5dp"
        android:text="Logout" />

    <Spinner
        android:id="@+id/spnLength"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pbLoading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-26dp" />

    <Spinner
        android:id="@+id/spnThick"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pbLoading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="52dp" />

    <Spinner
        android:id="@+id/spnColor"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/pbLoading"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="125dp" />


</RelativeLayout>